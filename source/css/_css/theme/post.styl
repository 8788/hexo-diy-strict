.post
  overflow: hidden
  margin-top: 30px
  background-color: #fff
  box-shadow: 1px 2px 3px #ddd

.post__head
  margin: 20px 60px

.post__time
  font-size: 14px
  color: #ccc

.post__title
  margin-top: 5px
  font-size: 1.45em
  a
    color: #666
    &:hover
      color: #06c

.post__image
  margin: 60px -60px
  display: block

.post__main
  margin: 30px 60px
  a
    color: $base-link-color
    &:hover, &:focus, &:active
      text-decoration: underline
  blockquote
    padding: 1px 10px 1px 20px
    border-left: 5px solid #ddd
    background-color: #eee
    p
      margin: 0.7em 0
      text-indent: 0
  code
    // border: 1px solid #DDD;
    background-color: #F8F8F8;
    border-radius: 3px;
    margin: 0 3px;
    padding: 1px 3px
  pre
    display: block
    padding: 0.8em 1em
    margin: 0 0.1em
    font-size: 14px
    line-height: 1.45
    text-shadow: 0 1px 0 #fff
    background-color: #F8F8F8;
    border: 1px solid #DDD;
    border-radius: 3px
    overflow-x: auto
    overflow-y: visible
    code
      margin: 0
      padding: 0
      border: 0
      background: none

  kbd
    @extend .post__main pre
    box-shadow: 0 1px 0px rgba(0, 0, 0, 0.2), 0 0 0 2px #ffffff inset
  .highlight
    overflow: auto
    margin: 30px -60px
    padding: 30px
    color: #ccc
    background-color: $highlight-background
    .gutter pre
      color: #666
    figcaption
      padding: 0 1em
      margin-bottom: 1em
      font-size: 0.85em
      color: #999
      a
        float: right
        padding-right: 1em
      span
        padding-left: 1em
    table
      margin: 0
      width: auto
      border: none
    table td, table th
      border-left: none
    table tr
      border-bottom: none
  h1 
    font-size:1.45em
    font-weight: normal
  h2 
    font-size:1.35em
    border-bottom: 1px solid #ddd
    padding-top: 15px
    padding-bottom: 10px
  h3 
    font-size:1.25em
  h4, h5, h6
    font-size:1.1em
  h1, h2, h3, h4, h5, h6, p
    margin:1.25em 0
  h1, h2, h3, h4, h5, h6
    font-weight: bold
    font-family: "Helvetica Neue", Helvetica, "Segoe UI", Arial, freesans, sans-serif, "Microsoft Yahei";
  abbr, acronym
    border-bottom:1px dotted #000
    cursor:help
  hr
    margin: 30px auto
    width: 61%
    height: 4px
    border: 0
    background: #eee
  em
    font-style: italic
    padding: 0 5px 0 2px;
  img
    display: block
    margin: 30px auto
    max-width: 100%
    height: auto
  table
    margin: 30px 0
    width: 100%
    border: 1px solid #cbcbcb
  table caption
    padding: 1em 0
  table td, table th
    border-left: 1px solid #cbcbcb
    overflow: visible
    padding: 0.5em 1em
  table td:first-child, table th:first-child
    border-left-width: 0
  table tr
    border-bottom: 1px solid #cbcbcb
  table thead
    background: #eee
  p
    text-indent: 28px;
  ol, ul, dl
    margin: 15px 0
    margin-left:2em
  ol
    list-style: decimal outside
  ul
    list-style: disc outside
  dd
    margin-left:1em
  pre
    .comment
    .title
      color: $highlight-comment
    .variable
    .attribute
    .tag
    .regexp
    .ruby .constant
    .xml .tag .title
    .xml .pi
    .xml .doctype
    .html .doctype
    .css .id
    .css .class
    .css .pseudo
      color: $highlight-red
    .number
    .preprocessor
    .built_in
    .literal
    .params
    .constant
      color: $highlight-orange
    .class
    .ruby .class .title
    .css .rules .attribute
      color: $highlight-green
    .string
    .value
    .inheritance
    .header
    .ruby .symbol
    .xml .cdata
      color: $highlight-green
    .css .hexcolor
      color: $highlight-aqua
    .function
    .python .decorator
    .python .title
    .ruby .function .title
    .ruby .title .keyword
    .perl .sub
    .javascript .title
    .coffeescript .title
      color: $highlight-blue
    .keyword
    .javascript .function
      color: $highlight-purple
      font-weight: bold

.post__foot
  padding: 10px
  border-top: 1px solid #ddd
  background-color: #fafafa
  *height: 47px

.post__foot-link
  padding: 10px
  color: #999

.post__tag__item
  display: inline-block
  *display: inline
  zoom: 1

.post__tag__link
  @extend .post__foot-link
  display: block
  &:hover
    color: #666
  &:before 
    content: "#"

.post__more
  @extend .post__foot-link
  padding: 10px 20px
  color: #fff
  border: 1px solid #bbb
  background-color: #ccc
  border-radius: 3px
  &:hover
    background-color: #ddd