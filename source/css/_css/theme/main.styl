.site-head
.site-foot
  height: 120px
  line-height: (@height - 2)
  background-color: #262a30
  // 343434
  // 6d6d6d
  border: 1px solid #000
  box-shadow: 1px 2px 3px #ddd

.site-title
  font-size: 30px
  a
    color: #fff

.site-nav__item
  display: inline-block
  *display: inline
  zoom: 1
  margin-left: 20px

.site-nav__link
  color: #999
  &:hover
    color: #fff

.site-copy
  font-size: 12px
  color: #999

.page-menu__item
  display: inline-block
  *display: inline
  zoom: 1
  padding-left: 10px

.page-menu__link
  position: relative
  font-size: 16px
  color: #fff